<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragment.SettingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <ImageButton
                android:src="@drawable/ic_info"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:id="@+id/imageButton_delete"
                android:background="@color/light"
                android:onClick="onClickDeleteInfo"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_titleDelete"/>
        <Switch
                android:text="@string/switch_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_delete"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_titleDelete"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/textView_titleDelete"
                android:textColor="@color/dark"
                android:textSize="24dp"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_titleDelete"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/switch_purpose" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
                android:src="@drawable/ic_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_layout3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView_layoutTwo"/>
        <ImageView
                android:src="@drawable/ic_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_layout4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView_layout3"/>
        <ImageView
                android:src="@drawable/ic_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_layoutTwo" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView_layoutOne"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_layout4"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="2dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner_layout3"
                app:layout_constraintStart_toEndOf="@+id/imageView_layout4" android:layout_marginStart="8dp"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_layout3"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="2dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner_layoutTwo"
                app:layout_constraintStart_toEndOf="@+id/imageView_layout3" android:layout_marginStart="8dp"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_layoutTwo"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="2dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner_layoutOne"
                app:layout_constraintStart_toEndOf="@+id/imageView_layoutTwo" android:layout_marginStart="8dp"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_layoutOne"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView_layout"
                app:layout_constraintStart_toEndOf="@+id/imageView_layoutOne" android:layout_marginStart="8dp"/>
        <ImageButton
                android:src="@drawable/ic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_itemLayout"
                android:background="@color/light"
                android:onClick="onClickLayoutInfo"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/switch_delete"/>
        <TextView
                android:text="@string/textView_titleNotification"
                android:textColor="@color/dark"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_titleNotification" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="@string/textView_notificationIntervalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_notificationIntervalDescription"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/spinner_notificationInterval"/>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_notificationInterval"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="2dp"
                app:layout_constraintTop_toBottomOf="@+id/imageButton_notificationIntervalInfo"
                android:layout_marginTop="8dp"/>

        <ImageButton
                android:src="@drawable/ic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_notificationIntervalInfo"
                android:background="@color/light"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:onClick="onClickNotificationInfo"
                app:layout_constraintTop_toBottomOf="@+id/textView_titleNotification"
                android:layout_marginTop="24dp"/>
        <Switch
                android:text="@string/switch_purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_purpose"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_notificationInterval"/>

        <ImageButton
                android:src="@drawable/ic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_purposeRequired"
                android:background="@color/light"
                android:onClick="onClickPurposeInfo"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/spinner_notificationInterval"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="@string/textView_titleLayout"
                android:textColor="@color/dark"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_titleLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/switch_delete"/>

        <ImageView
                android:src="@drawable/item_look"
                android:id="@+id/imageView_layout"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_titleLayout"/>
        <ImageView
                android:src="@drawable/ic_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_layoutOne" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView_layout"/>
        <Button
                android:text="@string/button_setDefault"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_setDefault"
                app:layout_constraintTop_toBottomOf="@+id/spinner_layout4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.507" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
