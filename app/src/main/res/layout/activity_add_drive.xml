<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddDriveActivity">

    <EditText
            android:id="@+id/edit_text_start_address"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:hint="@string/editText_startAddress"/>

    <EditText
            android:id="@+id/edit_text_destination_address"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:hint="@string/editText_destinationAddress"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_start_address"/>

    <EditText
            android:id="@+id/edit_text_purpose"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:hint="@string/editText_purpose"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_destination_address"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_distance"
            android:id="@+id/textView_distance"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/number_picker_mileageStart"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>

    <NumberPicker
            android:id="@+id/number_picker_mileageStart"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_margin="30dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="30dp"
            android:text="@string/textView_mileageStart"
            android:id="@+id/textView_odometer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/number_picker_odometer"/>

    <NumberPicker
            android:id="@+id/number_picker_odometer"
            android:layout_height="181dp"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>


    <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:text="@string/textView_duration"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText_time"/>


    <TextView
            android:id="@+id/textView_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:textAlignment="center"
            android:text="@string/button_startTime" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText_start_time"/>

    <EditText
            android:id="@+id/editText_time"
            android:editable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:onClick="onClickTimePicker"
            android:textAlignment="center"
            android:hint="@string/textView_duration"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_distance" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_purpose"/>


    <EditText
            android:id="@+id/editText_start_time"
            android:editable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:onClick="onClickTimePickerStart"
            android:textAlignment="center"
            android:hint="@string/button_startTime"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView_odometer"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_text_purpose"/>

</androidx.constraintlayout.widget.ConstraintLayout>